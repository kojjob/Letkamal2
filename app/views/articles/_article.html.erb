<div id="<%= dom_id article %>">
  <div class="mt-8 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex  flex-col items-center justify-between border-b-2 border-gray-200 py-6 md:justify-start md:space-x-10">
      <div class="flex justify-start">
        <span class="inline-flex items-center px-2 py-0.5 rounded text-sm font-medium leading-5 bg-gray-100 text-gray-800">
          <%#= article.category %>
        </span>
      </div>
      <div class="flex justify-end">
        <a href="#" class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium leading-5 bg-gray-100 text-gray-800 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <span><%#= article.likes %></span>
          <span class="sr-only">Likes</span>
        </a>
      </div>
  <p class="text-4xl font-bold mb-2 ">
    <%= article.title %> 
  </p>
  <div class=" block items-center my-5 text-gray-500 text-xl">
    <%= article.author %> <%= article.created_at.strftime("%B %d, %Y") %>
  </div>

  <p class="my-5">
    <%= article.content %>
  </p>


  <p class="my-5">
    <strong class="block font-medium mb-1">Published:</strong>
    <%#= article.published_at.strftime("%B %d, %Y") %>
  </p>

</div>
